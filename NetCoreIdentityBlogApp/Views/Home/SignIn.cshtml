@{
    ViewData["Title"] = "Giriş";
}
@model SignInViewModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2> Kullanıcı Girişi </h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"].ToString()
            </div>
        }
        <hr />
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>
        <form method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input value="mirza_ali@gmail.com" asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input value="mrzAl_34" asp-for="Password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input class="form-check-input"
                              asp-for="RememberMe">
                        <label class="form-check-label"
                               for="RememberMe"
                               asp-for="RememberMe">
                        </label>
                    </div>
                </div>
                <div class="col-md-6 me-0">
                    <a asp-controller="Home" asp-action="ForgetPassword"
                     class="btn btn-outline-secondary btn-sm float-end"> Şifremi Unuttum </a>
                   </div>
            </div>
            <button type="submit" class="btn btn-primary">Giriş</button>

        </form>
    </div>
</div>


